<h2>Log in</h2>

<%= form_with url: login_path do |form| %>

    <div class="mb-3" data-turbo="false">
        <%= form.label :email%>
        <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="mb-3" data-turbo="false">
        <%= form.label :password%>
        <%= form.text_field :password, class: "form-control" %>
    </div>
    <div class="mb-3" data-turbo="false">
        <%= form.submit "Log in", class:"btn btn-outline-primary"%>
    </div>

<%end%>