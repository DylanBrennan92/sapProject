
<h2>Show all staff members</h2>


<% if Current.user %> 
    <%if Current.user.role == 'admin'%>
<div class="container text-center">
  <div class="row">
    <div class="col">
      <h3>Email</h3>
    </div>
    <div class="col">
      <h3>Name</h3>
    </div>
    <div class="col">
      <h3>Role</h3>
    </div>
    <div class="col">
      <h3>Active since</h3>
    </div>
  </div>
  <% @users.each do |user| %>
   <div class="row ">
    <div class="col border border-success rounded">
      <%=user.email%>
    </div>
    <div class="col border border-success rounded">
      <%=user.name%>
    </div>
    <div class="col border border-success rounded">
      <%= user.role %>
    </div>
    <div class="col border border-success rounded">
      <%= user.created_at %>
    </div>
  </div>
  <%end%>
<%end%>
<%end%>
</div>